::-webkit-input-placeholder {
   text-align: center;
   line-height: 5em;
}

:-moz-placeholder { /* Firefox 18- */
   text-align: center;
   line-height: 5em;  
}

::-moz-placeholder {  /* Firefox 19+ */
   text-align: center;
   line-height: 5em;  
}

:-ms-input-placeholder {  
   text-align: center; 
   line-height: 5em;
}
